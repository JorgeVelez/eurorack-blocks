      pin L7
   }

   control pot7 Pot {
      position 152.5mm, 57mm
      style rogan.2ps
      label "7"
      pin P7
   }

   control led8 Led {
      position 175.5mm, 45.5mm
      style led.3mm.yellow
      pin L8
   }

   control pot8 Pot {
      position 175.5mm, 57mm
      style rogan.2ps
      label "8"
      pin P8
   }

   //--- Switches ------------------------------------------------------------

   control sw1 Button {
      position 16.5mm, 110.5mm
      style tl1105
      label "SW 1"
      pin B1
   }

   control sw2 Button {
      position 37.5mm, 110.5mm
      style tl1105
      label "SW 2"
      pin B2
